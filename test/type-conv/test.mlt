open Ppxlib_base
open Ppx_core


let foo =
  Type_conv.add "foo"
    ~str_type_decl:(Type_conv.Generator.make_noarg
                      (fun ~loc ~path:_ _ -> [%str let x = 42]))
;;

let bar =
  Type_conv.add "bar"
    ~str_type_decl:(Type_conv.Generator.make_noarg
                      ~deps:[foo]
                      (fun ~loc ~path:_ _ -> [%str let () = printf "x = %d\n" x]))
;;

type t = int [@@deriving bar]

[%%expect{|
